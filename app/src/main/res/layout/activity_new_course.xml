<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/course_info_bg"
    tools:context="com.example.simon.progress_app.NewCourse">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/course_info"
        android:layout_marginBottom="401dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:background="@drawable/textbox"
        android:id="@+id/courseName"
        android:layout_width="280dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:layout_height="90dp"
        android:layout_marginTop="184dp"
        android:hint="Course Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:background="@drawable/textbox"
        android:id="@+id/courseUnit"
        android:layout_width="280dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:layout_height="90dp"
        android:hint="Course Unit/s"
        android:layout_alignTop="@+id/courseName"
        android:layout_alignLeft="@+id/courseName"
        android:layout_alignStart="@+id/courseName"
        android:layout_marginTop="79dp" />

    <EditText
        android:background="@drawable/textbox"
        android:id="@+id/coursePassing"
        android:layout_width="280dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:layout_height="90dp"
        android:hint="Passing percentage"
        android:layout_below="@+id/courseName"
        android:layout_alignLeft="@+id/courseUnit"
        android:layout_alignStart="@+id/courseUnit"
        android:layout_marginTop="69dp" />

    <Button
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:background="@drawable/continue_button"
        android:layout_below="@+id/coursePassing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="addCourse"/>

</RelativeLayout>
